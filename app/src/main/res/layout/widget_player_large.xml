<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <ImageView
        android:id="@+id/widget_radio_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:contentDescription="@string/widget_radio_name"
        android:scaleType="centerCrop"
        android:background="#20FFFFFF"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_radio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="@string/widget_radio_name" />

        <TextView
            android:id="@+id/widget_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/widget_metadata" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|start">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/player_previous"
                android:src="@drawable/ic_skip_previous"
                android:tint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/player_play"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_arrow"
                android:tint="#FFFFFF"
                android:layout_marginHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/player_next"
                android:src="@drawable/ic_skip_next"
                android:tint="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
