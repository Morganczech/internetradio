<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center"
    android:background="@drawable/widget_background">

    <ImageView
        android:id="@+id/widget_radio_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="8dp"
        android:contentDescription="@string/widget_radio_name"
        android:background="@drawable/bg_widget_icon_rounded"
        android:src="@mipmap/ic_launcher"
        android:clipToOutline="true"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/widget_previous"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/player_previous"
        android:src="@drawable/ic_skip_previous"
        android:tint="#FFFFFF" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_radio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="@string/widget_radio_name" />

        <TextView
            android:id="@+id/widget_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="@string/widget_metadata" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/widget_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/player_play"
        android:src="@drawable/ic_play_arrow"
        android:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/widget_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/player_next"
        android:src="@drawable/ic_skip_next"
        android:tint="#FFFFFF" />
</LinearLayout> 