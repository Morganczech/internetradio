<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="4dp">

    <!-- Hidden Views -->
    <TextView android:id="@+id/widget_radio_name" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/widget_metadata" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

    <ImageView
        android:id="@+id/widget_radio_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_widget_icon_rounded"
        android:src="@mipmap/ic_launcher"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/widget_radio_name" />

    <!-- Controls -->
    <ImageButton
        android:id="@+id/widget_next"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_skip_next"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:contentDescription="@string/player_next"/>

    <ImageButton
        android:id="@+id/widget_play_pause"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toStartOf="@id/widget_next"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_play_arrow"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="2dp"
        android:contentDescription="@string/player_play"/>

    <ImageButton
        android:id="@+id/widget_previous"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_toStartOf="@id/widget_play_pause"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_skip_previous"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:contentDescription="@string/player_previous"/>

</RelativeLayout>
