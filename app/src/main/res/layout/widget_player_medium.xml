<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <ImageView
        android:id="@+id/widget_radio_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_widget_icon_rounded"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/widget_radio_name" />

    <ImageButton
        android:id="@+id/widget_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_skip_next"
        android:tint="#FFFFFF"
        android:contentDescription="@string/player_next"/>

    <ImageButton
        android:id="@+id/widget_play_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/widget_next"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_play_arrow"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:contentDescription="@string/player_play"/>

    <ImageButton
        android:id="@+id/widget_previous"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/widget_play_pause"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_skip_previous"
        android:tint="#FFFFFF"
        android:contentDescription="@string/player_previous"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_radio_icon"
        android:layout_toStartOf="@id/widget_previous"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingHorizontal="6dp">

        <TextView
            android:id="@+id/widget_radio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="@string/widget_radio_name" />

        <TextView
            android:id="@+id/widget_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/widget_metadata" />
    </LinearLayout>

</RelativeLayout>
